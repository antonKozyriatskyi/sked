<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.preference.PreferenceCategory android:title="@string/pref_notifications_header">

        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="notify_on_update"
            android:summary="@string/pref_notifications_schedule_updates_summary"
            android:title="@string/pref_notifications_schedule_updates_title" />

    </androidx.preference.PreferenceCategory>

    <androidx.preference.PreferenceCategory android:title="@string/pref_appearance_header">

        <ListPreference
            android:defaultValue="0"
            android:entries="@array/pref_theme_themes"
            android:entryValues="@array/pref_theme_values"
            android:key="default_theme"
            android:summary="%s"
            android:title="@string/pref_theme_header" />

    </androidx.preference.PreferenceCategory>

</androidx.preference.PreferenceScreen>