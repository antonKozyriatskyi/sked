<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_notifications_header">

        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="notify_on_update"
            android:summary="@string/pref_notifications_schedule_updates_summary"
            android:title="@string/pref_notifications_schedule_updates_title" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_appearance_header">

        <ListPreference
            android:defaultValue="0"
            android:entries="@array/pref_theme_themes"
            android:entryValues="@array/pref_theme_values"
            android:key="default_theme"
            android:summary="%s"
            android:title="@string/pref_theme_header" />

        <ListPreference
            android:defaultValue="0"
            android:entries="@array/pref_first_day_of_week_days"
            android:entryValues="@array/pref_first_day_of_week_values"
            android:key="start_day"
            android:summary="%s"
            android:title="@string/pref_first_day_of_week_header" />

    </PreferenceCategory>

</PreferenceScreen>