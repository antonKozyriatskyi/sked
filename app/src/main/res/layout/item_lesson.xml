<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:clipChildren="false">

    <androidx.cardview.widget.CardView
        android:id="@+id/lesson_card"
        android:layout_width="@dimen/lesson_card_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:duplicateParentState="false"
        android:foreground="?selectableItemBackground"
        android:stateListAnimator="@drawable/card_selector"
        app:contentPadding="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lesson_cabinet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/lesson_who"
                android:layout_alignBottom="@id/lesson_who"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textSize="15sp"
                android:textStyle="italic"
                tools:text="Студ. Ц" />

            <TextView
                android:id="@+id/lesson_who"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lesson_time"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_toStartOf="@id/lesson_cabinet"
                android:layout_toLeftOf="@id/lesson_cabinet"
                android:textSize="15sp"
                android:textStyle="italic"
                tools:text="Teacher" />

            <TextView
                android:id="@+id/lesson_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/lesson_number"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                tools:text="08:00 - 09:35" />

            <TextView
                android:id="@+id/lesson_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lesson_name"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="8dp"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="1" />

            <TextView
                android:id="@+id/lesson_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textSize="15sp"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1"
                tools:text="Lesson type" />

            <TextView
                android:id="@+id/lesson_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_toStartOf="@id/lesson_type"
                android:layout_toLeftOf="@id/lesson_type"
                android:textSize="15sp"
                tools:text="Lessonvffdddccddcdccdvdfvdfdvfhvf55555555555555555555555555555555555555555555555555555555vdffsfsdsdffdsfsdv555555" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>